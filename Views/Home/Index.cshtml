<!DOCTYPE html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
<link rel="stylesheet" type="text/css" href="/css/loginstyle.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<title>SASO-IMS-Login</title>

<div class="container">
    <div class="forms-container">
        <div class="signin-signup">
            <form action="" class="sign-in-form" id="loginForm">
                <h2 class="title">Sign in</h2>
                <div>
                    <i class="fas fa-user"></i>
                    <select id="loginRole">
                        <option value="admin">Admin</option>
                        <option value="staff">Staff</option>
                    </select>
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Username" id="loginUsername" required/>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Password" id="loginPassword" required/>
                    <i class="fas fa-eye toggle-password" onclick="loginEye()"></i>
                </div>
                <input style="" type="submit" value="Login" class="btn solid" />
            </form>
            <form action="" class="sign-up-form" id="registrationForm">
                <h2 class="title">Sign up</h2>
                <div id="error-message"
                    style="color: rgb(252, 46, 46); background:white; font-weight:bold; border-radius:2px; width:400px; text-align: center;">
                </div>
                <div>
                    <i class="fas fa-user"></i>
                    <select id="registerRole" name="Role">
                        <option value="staff">Staff</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="First Name" id="registerFirstname" name="Firstname" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Last Name" id="registerLastname" name="Lastname" />
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Username" id="registerUsername" name="Username" />
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input type="email" placeholder="Email" id="registerEmail" name="Email" / required>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Password" id="registerPassword" name="Password" />
                    <i class="fas fa-eye toggle-password" onclick="registerEye()"></i>
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Confirm Password" id="confirmPassword" name="confirmPassword" />
                    <i class="fas fa-eye toggle-password" onclick="confirmEye()"></i>
                </div>
                <input style="" type="submit" id="signup-button" class="btn" value="Sign up" />

            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <img class="logo" src="/lib/guidancelogo.png" alt="">
                <h1>SASO Information Management System</h1>
                <p>Don't have an account ?</p>
                <button class="btn transparent" id="sign-up-btn">
                    Sign up
                </button>
            </div>
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Already have an account ?</h3>
                <button class="btn transparent" id="sign-in-btn">
                    Sign in
                </button>
            </div>
        </div>
    </div>
</div>
@Html.Partial("Partials/loadAnimation")

</div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/login.js"></script>
<script src="~/js/register.js"></script>
<script>
    function loginEye() {
        var passwordInput = document.getElementById('loginPassword');
        var toggleIcon = document.querySelector('.toggle-password');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }
    function registerEye() {
        var passwordInput = document.getElementById('registerPassword');
        var toggleIcon = document.querySelector('.toggle-password');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }
    function confirmEye() {
        var passwordInput = document.getElementById('confirmPassword');
        var toggleIcon = document.querySelector('.toggle-password');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }
</script>
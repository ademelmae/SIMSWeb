<title>Student Violations</title>
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
<style>
    .container {
        max-width: 95%;
        margin: 20px;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }
</style>

<body>
    <div class="container">
        <div class="header--wrapper">
            <div class="header--title">
                <span style="color: white;font-weight: bold; font-size: 20px">SASO-<span
                        style="color: rgb(255, 255, 255)55, 255, 255);">IMS</span></span>
                <h2 style="color:white;">Student Violation List</h2>
            </div>
            <div class="user--info">
                <img src="/lib/guidancelogo.png" alt="">
            </div>
        </div>

        <div class="form-group">
            <label for="statusFilter">Filter by Status:</label>
            <select id="statusFilter" class="form-control">
                <option value="">All</option>
                <option value="pending">Pending</option>
                <option value="ongoing">Ongoing</option>
                <option value="resolved">Resolved</option>
            </select>
        </div>

        <div id="tableContainer" class="table-container">
            <table id="violationsTable" class="display">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Student ID</th>
                        <th>Course</th>
                        <th>Year Level</th>
                        <th>Offense Level</th>
                        <th>Violation Type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="violations-table-body">
                    <!-- Data will be populated here -->
                </tbody>
            </table>
        </div>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8"
    src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="~/js/addviolation.js"></script>
<script src="~/js/logout.js"></script>
